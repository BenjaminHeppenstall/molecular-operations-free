<?xml version='1.0' encoding='utf-8'?>
<widget id="com.heppenstall.molarityFree" version="1.4.8" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name short="molecular operations">molecular operations FREE</name>
    <description>
        tools for molecular biology FREE.
    </description>
    <author email="heppenstall.co@gmail.com" href="http://heppenstall.atwebpages.com">
        Benjamin Heppenstall
    </author>
    <platform name="android">
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="true" />
        <icon density="ldpi" src="res/icon/android/Icon-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/Icon-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/Icon-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/Icon-xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/Icon-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/Icon-xxxhdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="res/screen/android/splash-port-mdpi.png" />
        <splash density="port-hdpi" src="res/screen/android/splash-port-hdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="res/screen/android/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/splash-port-xxxhdpi.png" />
    </platform>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-admobpro" spec="^2.31.5" />
    <engine name="android" spec="^7.0.0" />
</widget>
